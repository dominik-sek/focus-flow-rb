<div class="flex flex-col gap-6 w-full" data-controller="filters-component">
  <div  class="flex flex-col gap-2">
    <!--input with filters -->
    <label class="text-gray-400">From:</label>
    <input type="date" data-filters-component-target="fromDateInput" data-action="change->filters-component#setFromDate" class="w-full rounded-lg bg-gray-800 p-4 text-white" />
    <label class="text-gray-400">To:</label>
    <input type="date" data-filters-component-target="toDateInput" data-action="change->filters-component#setToDate" class="w-full rounded-lg bg-gray-800 p-4 text-white" />
    <!--pill shaped filters -->
    <%= render FiltersComponent.new(
            filters: ["today", "this_week", "this_month"],
            active_filter: params[:range] || "today"
            )
      %>
  </div>
  <div data-controller="report-table" class="flex flex-col gap-2">
    <div class="flex gap-2 w-full items-center justify-center">
      <!-- action buttons -->
      Generate to:
      <%= link_to 'XLSX',
        generate_report_path,
        data: {filters_component_target: "exportLink"},
        class: "border border-gray-600 px-6 py-2 rounded-xl bg-gray-800" %>
    </div>
    <div class="flex gap-2 flex-1 h-full ">
      <div data-ag-theme-mode="dark-blue" id="tableGrid" class="w-full h-[400px] min-w-0 ">
      </div>
    </div>
  </div>
</div>
