<div class="w-full h-full grid grid-cols-1 grid-rows-8 md:grid-cols-3 lg:grid-cols-6 gap-4 grid-flow-row">
  
  <div class="md:col-span-4 row-span-4 bg-white p-4 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4">Timer</h2>
  <div>
        <input type="text" placeholder="Enter task name" class="w-full p-2 border border-gray-300 rounded mb-4">
  </div>

  <div data-controller="timer" class="flex flex-col items-center justify-between mb-4">
    <span class="text-3xl font-bold" data-timer-target="timerDisplay" id="timer-display">00:00:00</span>
        <button 
        data-timer-target="toggleButton"
        data-action="click->timer#toggle" 
        type="button" 
        id="start-timer" 
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5  dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
          Start
       </button>
  </div>


  </div>

  <div class="md:col-span-2 row-span-4 bg-white p-4 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4">Welcome to Focus Flow</h2>
    <p class="text-gray-700">Your personal productivity dashboard.</p>
  </div>

  <div class="col-span-full row-span-4 bg-white p-4 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4">Recent activity</h2>
    <table class="min-w-full text-left bg-white border border-gray-200">
      <thead>
        <tr class="bg-gray-100 border-b border-gray-200">
          <th class="px-4 py-2">Task</th>
          <th class="px-4 py-2">Duration</th>
          <th class="px-4 py-2">Project</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <tr>
          <td class="px-4 py-2">Task 1</td>
          <td class="px-4 py-2">Completed</td>
          <td class="px-4 py-2">30 mins</td>
        </tr>
        <tr>
          <td class="px-4 py-2">Task 2</td>
          <td class="px-4 py-2">In Progress</td>
          <td class="px-4 py-2">15 mins</td>
        </tr>
      </tbody>
    </table>
    <div>
      <button type="button" class="mt-2 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
        Add time entry
        </button>
      </div>

  </div>

</div>

