<div class="flex gap-2 overflow-auto">
  <% @filters.each do |filter| %>
    <button
      data-action="click->filters-component#changeFilter"
      data-filter="<%= filter %>"
      data-filters-component-target="filterButton"
      class="
      rounded-3xl px-4 py-1 w-fit text-center cursor-pointer
      bg-gray-800 hover:bg-gray-400
      data-[active=true]:bg-blue-500
      data-[active=true]:text-white"
      >
      <%= filter.titleize %>
    </button>
  <% end %>
</div>
